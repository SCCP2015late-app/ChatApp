{
  "manifest_version": 2,
  "name": "UDPtest",
  "short_name": "UDPtest",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",
  
  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  
  "permissions": [
      {"fileSystem": ["write", "retainEntries", "directory"]},
      "system.network",
      "storage"
  ],
  
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  
  "sockets": {
    "udp": {
      "bind" : "",
      "send" : ""
    }
  },
  
  "file_handlers": {
    "text": {
      "types": [
          "text/*"
      ]
    }
  }
  
}