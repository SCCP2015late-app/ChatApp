{
  "manifest_version": 2,
  "name": "BluetoothSampleApp",
  "short_name": "BluetoothSampleApp",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  
  "bluetooth": {
    "uuids": [ "180D" ],
    "socket": true
  },
  "sockets": {
    "udp": {
      "bind" : "*",
      "send" : "*"
    }
  }
}
